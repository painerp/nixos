{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "extends": ["schedule:daily"]
  },
  "nix": {
    "enabled": true
  },
  "regexManagers": [
    {
      "fileMatch": ["variants/.+\\.nix$"],
      "matchStrings": [
        "(?<serviceName>[a-zA-Z0-9_-]+)\\s*=\\s*\\{[^}]*?version\\s*=\\s*\"(?<currentValue>[^\"]+)\"[^}]*?\\}"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "semver",
      "depNameTemplate": "{{{serviceName}}}"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["jellyfin"],
      "packageName": "lscr.io/linuxserver/jellyfin"
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["immich"],
      "packageName": "ghcr.io/immich-app/immich-server"
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["n8n"],
      "packageName": "docker.n8n.io/n8nio/n8n"
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["dawarich"],
      "packageName": "freikin/dawarich"
    }
  ]
}