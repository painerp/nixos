{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "extends": [
      "schedule:daily"
    ]
  },
  "nix": {
    "enabled": true
  },
  "hostRules": [
    {
      "hostType": "github",
      "matchHost": "github.com"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/variants/.+\\.nix$/"
      ],
      "matchStrings": [
        "authentik\\s*=\\s*\\{[^}]*?version\\s*=\\s*\"(?<currentValue>[^\"]+)\"[^}]*?\\}"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "semver",
      "depNameTemplate": "ghcr.io/goauthentik/proxy"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/variants/.+\\.nix$/"
      ],
      "matchStrings": [
        "n8n\\s*=\\s*\\{[^}]*?version\\s*=\\s*\"(?<currentValue>[^\"]+)\"[^}]*?\\}"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "semver",
      "depNameTemplate": "docker.n8n.io/n8nio/n8n"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/variants/.+\\.nix$/"
      ],
      "matchStrings": [
        "dawarich\\s*=\\s*\\{[^}]*?version\\s*=\\s*\"(?<currentValue>[^\"]+)\"[^}]*?\\}"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "semver",
      "depNameTemplate": "docker.io/freikin/dawarich"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/variants/.+\\.nix$/"
      ],
      "matchStrings": [
        "jellyfin\\s*=\\s*\\{[^}]*?version\\s*=\\s*\"(?<currentValue>[^\"]+)\"[^}]*?\\}"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "semver",
      "depNameTemplate": "lscr.io/linuxserver/jellyfin",
      "extractVersionTemplate": "^(?<version>\\d+\\.\\d+\\.\\d+)$"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/variants/.+\\.nix$/"
      ],
      "matchStrings": [
        "immich\\s*=\\s*\\{[^}]*?version\\s*=\\s*\"(?<currentValue>[^\"]+)\"[^}]*?\\}"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "semver",
      "depNameTemplate": "ghcr.io/immich-app/immich-server"
    }
  ]
}