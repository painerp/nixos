{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "extends": [
      "schedule:daily"
    ]
  },
  "nix": {
    "enabled": true
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/variants/.+\\.nix$/"
      ],
      "matchStrings": [
        "(?<serviceName>[a-zA-Z0-9_-]+)\\s*=\\s*\\{[^}]*?version\\s*=\\s*\"(?<currentValue>[^\"]+)\"[^}]*?\\}"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "semver",
      "depNameTemplate": "{{serviceName}}"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["immich"],
      "registryAliases": {
        "immich": "ghcr.io/immich-app/immich-server"
      }
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["jellyfin"],
      "registryAliases": {
        "jellyfin": "lscr.io/linuxserver/jellyfin"
      }
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["n8n"],
      "registryAliases": {
        "n8n": "docker.n8n.io/n8nio/n8n"
      }
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["dawarich"],
      "registryAliases": {
        "dawarich": "freikin/dawarich"
      }
    }
  ]
}
