{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "extends": ["schedule:daily"]
  },
  "nix": {
    "enabled": true
  },
  "regexManagers": [
    {
      "fileMatch": ["variants/.+\\.nix$"],
      "matchStrings": [
        "(?<serviceName>[a-zA-Z0-9_-]+)\\s*=\\s*\\{[^}]*?version\\s*=\\s*\"(?<currentValue>[^\"]+)\"[^}]*?\\}"
      ],
      "depNameTemplate": "{{#if lookup (fromJson (readFile 'docker-mappings.json')) serviceName}}{{lookup (fromJson (readFile 'docker-mappings.json')) serviceName}}{{else}}{{serviceName}}{{/if}}",
      "datasourceTemplate": "docker",
      "versioningTemplate": "semver"
    }
  ]
}